<div class="items-center justify-center px-4">
  <div class="card bg-base-100/80 backdrop-blur-sm w-full max-w-sm rounded-xl shadow-lg border border-base-300/40">
    <div class="card-body space-y-8 px-6 py-8">

      <!-- タイトル -->
      <h2 class="text-xl font-bold text-center text-base-content">
        パスワード再設定
      </h2>

      <!-- フォーム -->
      <%= form_with model: resource,
                    as: resource_name,
                    url: password_path(resource_name),
                    method: :put,
                    local: true,
                    html: { class: "grid gap-y-6" } do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-control gap-1">
          <%= f.label :password, "新しいパスワード",
                class: "label-text text-xs font-semibold text-base-content/80" %>
          <% if @minimum_password_length %>
            <span class="text-xs text-base-content/60">
              <%= @minimum_password_length %>文字以上
            </span>
          <% end %>

          <%= f.password_field :password,
                autofocus: true,
                autocomplete: "new-password",
                class: "input input-bordered w-full rounded-lg",
                required: true %>
        </div>

        <div class="form-control gap-1">
          <%= f.label :password_confirmation, "パスワード確認",
                class: "label-text text-xs font-semibold text-base-content/80" %>

          <%= f.password_field :password_confirmation,
                autocomplete: "new-password",
                class: "input input-bordered w-full rounded-lg",
                required: true %>
        </div>

        <%= f.button type: "submit",
              class: "btn btn-primary w-full h-11 rounded-lg text-sm font-semibold flex items-center justify-center gap-2 shadow-md shadow-primary/20" do %>
          <%= heroicon "check", options: { class: "w-4 h-4" } %>
          パスワードを変更
        <% end %>
      <% end %>
    </div>
  </div>
</div>
